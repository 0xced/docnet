<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PlatformTarget>x64</PlatformTarget>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Authors>Modestas Petravicius</Authors>
    <Product>DocNet</Product>
    <Description>DocNET is as fast PDF editing and reading library for modern .NET applications.</Description>
    <version>$(VersionSuffix)</version>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>1701;1702;1591;0649</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="runtimes/**" PackagePath="runtimes" Visible="true" />
  </ItemGroup>
</Project>
